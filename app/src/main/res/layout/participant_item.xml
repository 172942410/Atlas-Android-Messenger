<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/atlas_address_bar_item_height"
    android:background="@drawable/atlas_address_bar_item_background"
    android:orientation="horizontal">

    <com.layer.atlas.AtlasAvatar
        android:id="@+id/avatar"
        android:layout_width="@dimen/atlas_address_bar_item_avatar_size"
        android:layout_height="@dimen/atlas_address_bar_item_avatar_size"
        android:layout_marginBottom="@dimen/atlas_address_bar_item_avatar_margin_bottom"
        android:layout_marginLeft="@dimen/atlas_address_bar_item_avatar_margin_left"
        android:layout_marginRight="@dimen/atlas_address_bar_item_avatar_margin_right"
        android:layout_marginTop="@dimen/atlas_address_bar_item_avatar_margin_top"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="Title"
        android:textSize="@dimen/atlas_text_size_conversation_search_item"
        />

    <ImageView
        android:id="@+id/blocked"
        android:layout_width="@dimen/atlas_address_bar_item_avatar_size"
        android:layout_height="@dimen/atlas_address_bar_item_avatar_size"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_block_white_24dp"
        android:tint="@color/atlas_icon_enabled"
        android:visibility="invisible"
        />
</LinearLayout>